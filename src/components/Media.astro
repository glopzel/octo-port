<style>
    .social-media-links {
        display: flex;
        justify-content: center;
        height: 100px;
    }

    ul {
        display: flex;
        align-items:center;
        gap: 1em;
    }

    a {
        display: inline-block;
        border-radius: 50%;
        padding: 0.2em;
        border: 2px solid var(--color-text);
    }

    svg {
        width: 30px;
        height: auto;
        fill: var(--color-text);
        transition: var(--hover-effect);
    }

    svg:hover {
        fill: var(--nav-colors);
    }

    @media (min-width: 50em){
        .social-media-links {
            justify-content: flex-end;
        }
    }
</style>