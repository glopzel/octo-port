---
import Media from '../components/Media.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Layout from '../layouts/Layout.astro';
import bojack from "../images/bojack.png"
import bookmarks from "../images/bookmarks.png"
import dinesite from "../images/food.png"
import gallery from "../images/gallery.png"
import Form from '../components/Form.svelte';
import Label from '../components/Label.svelte';
import NotationHero from '../components/NotationHero.svelte';
import browserImg from "../images/handy-browser-1.png";

const projects = [
	{name: "Bookmarksland", repoLink: "https://github.com/glopzel/bookmarksland", siteLink: "https://bookmarksland.onrender.com", src: bookmarks, content: "Landing site template for browser extension made with React." }, 
	{name: "Art Gallery", repoLink: "https://github.com/glopzel/art-gallery", siteLink: "https://fem-art-gallery.onrender.com/", src: gallery, content: "Landing site for art gallery made only with Astro." },
	{name: "Dine", repoLink: "https://github.com/glopzel/re-dine", siteLink: "https://redine.onrender.com", src: dinesite, content: "Site made with Astro integrating Svelte components to handle events." },
	{name: "BoJack Horseman API", repoLink: "https://github.com/glopzel/bojack-horseman-api", siteLink: "https://bojack-horseman-api.onrender.com", src: bojack, content: "API that returns information about the Netflix series BoJack Horseman, with MongoDB, Express and React." },
] 
---

<Layout>
	<main class="">
		<div id="home" class="hero-container">
			<section class="container section-block hero">
				<NotationHero client:load/>
				<Media />
			</section>
		</div>

		<section id="about">
			<div class="container">
				<h2 class="font-bold my-6">About Me</h2>

				<p class="mb-6">As an Agronomist graduate, I recognized the potential of technology in promoting sustainable practices. My coding journey began with Python, where I used data analysis to support research projects. I kept learning through various resources until I decided to join the 100Devs Agency. There, I gained valuable experience in both front-end and back-end development,which helped me to deepen my understanding of software development.</p>
				<p>During this time, I've had the opportunity to work with a variety of languages and frameworks, the most common of which are: <Label tech="JavaScript"client:load /> and <Label tech="TypeScript"client:load />, <Label tech="React"client:load /> , <Label tech="Node" client:load /> with <Label tech="Express" client:load /> , <Label tech="MongoDB" client:load /> and <Label tech="PostgreSQL" client:load />.</p>
			</div>
		</section>

		<section id="projects" class="container section-block">
			<h2 class="font-bold my-6">Projects</h2>
			
			<div class="project-grid">
				{
					projects.map((item, index) => {
						return (
							<ProjectCard projectName={item.name} hrefLive="" hrefRepo="" body={item.content} image={item.src} />
						) 
					})
				}
				<img class="browser-img icon-drawing" loading="lazy" src={browserImg} alt="">
			</div>
		</section>

		<Form client:load/>
	</main>
</Layout>

<style>

	.hero {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.theme-switch {
        position: absolute;
        right: 0;
        top: 0;
        z-index: 999;
        width: 20px;
        margin: 1em 2em;
	}	

	#about {
		padding: 3em 0;
	}

	#projects {
		display: grid;
		grid-template-rows: auto 1fr;
	}

	.browser-img {
		top: -70px;
		right: -30px;
		z-index: -1;
	}

	.project-grid {
		display: grid;
		gap: 2em;
		position: relative;
	}

	@media (min-width: 50em) {
		main {
			margin-left: 20%;
		}

		.project-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 2em;
		}
	}
</style>
